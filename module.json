{
	"id": "thegoodwin-terrain-ruler",
	"title": "TheGoodwin's Terrain Ruler",
	"description": "Adds a ruler tool that allows you to measure distances taking difficult terrain (provided by the terrain layer module) into account.\n This is a fork from https://github.com/manuelVo/foundryvtt-terrain-ruler from Manuel Vögele aiming at fixing V11 support.",
	"version": "1.8.2",
	"compatibility": {
		"minimum": "10",
		"verified": "11"
	},
	"authors": [
		{
			"name": "Jean-Paul Goodwin",
			"email": "goodwinjeanpaul@outlook.fr",
			"discord": "soulmourne"
		}
	],
	"esmodules": [
		"lib/libwrapper_shim.js",
		"src/main.js"
	],
	"languages": [
		{
			"lang": "de",
			"name": "German",
			"path": "lang/de.json"
		},
		{
			"lang": "en",
			"name": "English",
			"path": "lang/en.json"
		},
		{
			"lang": "fr",
			"name": "Français",
			"path": "lang/fr.json"
		},
		{
			"lang": "pt-BR",
			"name": "Português (Brasil)",
			"path": "lang/pt-BR.json"
		},
		{
			"lang": "cn",
			"name": "中文（简体）",
			"path": "lang/zh_Hans.json"
		}
	],
	"relationships": {
		"requires": [
			{
				"id": "enhanced-terrain-layer",
				"type": "module",
				"manifest": "https://github.com/ironmonk88/enhanced-terrain-layer/releases/latest/download/module.json"
			}
		]
	},
	"url": "https://github.com/TheGoodwin/foundryvtt-thegoodwins-terrain-ruler",
	"download": "https://github.com/TheGoodwin/foundryvtt-thegoodwins-terrain-ruler/archive/v1.8.2.zip",
	"manifest": "https://raw.githubusercontent.com/TheGoodwin/foundryvtt-thegoodwins-terrain-ruler/master/module.json",
	"readme": "https://github.com/TheGoodwin/foundryvtt-thegoodwins-terrain-ruler/blob/master/README.md",
	"changelog": "https://github.com/TheGoodwin/foundryvtt-thegoodwins-terrain-ruler/blob/master/CHANGELOG.md",
	"bugs": "https://github.com/TheGoodwin/foundryvtt-thegoodwins-terrain-ruler/issues",
	"allowBugReporter": true
}